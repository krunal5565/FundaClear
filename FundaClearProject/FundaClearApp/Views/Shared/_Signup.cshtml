@model Loyalty.DTO.TenantDTO

<div class="col-sm-12 shadow-lg bg-light" style="padding:10px;">
    <div class="text-center">
        <h3 class="text-primary">Signup</h3>
    </div>
    <div class="">



        @using (Html.BeginForm("Signup", "Home", FormMethod.Post))
        {
            <div style=" color: red; float: left">
                @TempData["ErrorMessage"]
            </div>

            <div style=" color: green; float: left">
                @TempData["SuccessMessage"]
            </div>
            <br />

            <div class="row gy-4" style="margin:5px">
                <div class="col-md-6">

                    @Html.EditorFor(model => model.LoginId, new { htmlAttributes = new { @title = "Username", @Placeholder = "Username", @class = "form-control" } })
                </div>
                <div class="col-md-6">
                    @Html.PasswordFor(model => model.PassKey, new { @title = "Password", @Placeholder = "Password", @class = "form-control" })
