            </div>
            <div class="row gy-4" style="margin:5px">
                <div class="col-md-6">
                    @Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @title = "Mobile Number", @Placeholder = "Mobile Number", @class = "form-control" } })
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @title = "Email", @Placeholder = "Email", @class = "form-control" } })
                </div>
            </div>

            <div class="row gy-4" style="margin:5px">
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @title = "Address", @Placeholder = "Address", @class = "form-control" } })
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Locality, new { htmlAttributes = new { @title = "Locality", @Placeholder = "Locality", @class = "form-control" } })
                </div>
            </div>

            <div class="row gy-4" style="margin:5px">
                <div class="col-md-6">
                    @Html.EditorFor(model => model.ContactPerson, new { htmlAttributes = new { @title = "Contact Person", @Placeholder = "Contact Person", @class = "form-control" } })
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.TenantName, new { htmlAttributes = new { @title = "TenantName", @Placeholder = "TenantName", @class = "form-control" } })
                </div>
            </div>


            <div class="d-grid col-6 mx-auto" style="margin:5px">
                <br />
                <button class="btn btn-primary" type="submit" id="post"><span></span> Sign Up</button>
            </div>
