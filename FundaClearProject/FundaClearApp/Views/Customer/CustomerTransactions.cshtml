@model CustomerModel

<div id="customerDiv">
    <div class="row">
        <div class="col-md-12">
            <div style="margin:20px;">
                @if (Model.IsAddPoints)
                {
                    <h4>Customer Transactions</h4>
                }
                else
                {
                    <h4>Customer Redemptions</h4>
                }
            </div>
            <hr />
        </div>
    </div>
    <div style="padding: 30px;">
        <div class="row">
            <div class="col-md-12">

                <i class="fa fa-user-o"></i> : @Model.Customer.CustomerName <br />
                <i class="fa fa-mobile"></i> : @Model.Customer.MobileNumber <br />
                <i class="fa fa-user-o"></i> : @Model.Customer.Locality <br />
                <i class="fa fa-user-o"></i> : @Model.Customer.Address <br />
            </div>
            <div class="col-md-12">
                @Html.Partial("_CustomerTransactions", Model)
            </div>
        </div>
    </div>
    @Html.Partial("_CustomerTransactionSave", Model.CustomerTransaction)
</div>
